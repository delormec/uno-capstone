@model OST_Admin.Models.LikertScaleQuestion
@{
    ViewBag.Title = "LikertScaleQuestionRow";
    
    //pulls viewbag from renderer
    var vb = ((dynamic)ViewData["vb"]);

    //which allows me to pass in what prefix my html elements should have (and question #)
    int id = vb.questionid;

    //need this in option area to add/remove them
    ViewBag.formid = Model.Form.FormId;
    ViewBag.questionid = Model.QuestionId;

    //appends a prefix to all my element names in this case [id]. this allows it to fit into a List<Question>
    ViewData.TemplateInfo.HtmlFieldPrefix = "[" + id + "]";

    int labelcount = 0;
}

        @Html.HiddenFor(model => model.QuestionId)
        <input type="hidden" value="@Model.SortOrder" name="[@id].SortOrder" id="QSortOrder"/>
        @Html.Hidden("ModelType", Model.GetType())

        <div id="question-type">Likert Scale Question</div>
        <div id="question-text">
            <input class="text-box single-line" type="text" value="@Model.Text" name="[@Model.SortOrder].Text"/>
        </div>
        <div id="question-help-text">
            <input class="text-box single-line" type="text" value="@Model.HelpText" name="[@Model.SortOrder].HelpText"/>
        </div>

        <table id="question-table">
            <tr>
                <td>Field Name</td>
                <td>
                    <div id="question-field-name">
                        <input class="text-box single-line" type="text" value="@Model.FieldName" name="[@Model.SortOrder].FieldName"/>
                    </div>
                </td>
            </tr>
            <tr>
                <td>Field Type</td>
                <td>
                    <div id="question-field-type">
                        <input class="text-box single-line" type="text" value="@Model.FieldType" name="[@Model.SortOrder].FieldType"/>
                    </div>
                </td>
            </tr>
            <tr>
                <td>Steps (1-?)</td>
                <td>
                    <div id="question-steps">
                        <input class="text-box single-line" type="text" value="@Model.Steps" name="[@Model.SortOrder].Steps"/>
                    </div>
                </td>
            </tr>

            <tr>
                <td>low label</td>
                <td>
                    <div id="question-label-low">
                        @Html.Hidden("Labels[0].LabelId", Model.Labels.ToList()[0].LabelId) 
                        @Html.Hidden("Labels[0].Range", Model.Labels.ToList()[0].Range)
                        <input class="text-box single-line" type="text" value="@Model.Labels.ToList()[0].Text" name="[@Model.SortOrder].Labels[0].Text"/>
                    </div>
                </td>
            </tr>

            <tr>
                <td>medium label</td>
                <td>
                    <div id="question-label-medium">
                        @Html.Hidden("Labels[1].LabelId", Model.Labels.ToList()[1].LabelId) 
                        @Html.Hidden("Labels[1].Range", Model.Labels.ToList()[1].Range)
                        <input class="text-box single-line" type="text" value="@Model.Labels.ToList()[1].Text" name="[@Model.SortOrder].Labels[1].Text"/>
                    </div>
                </td>
            </tr>

            <tr>
                <td>high label</td>
                <td>
                    <div id="question-label-high">
                        @Html.Hidden("Labels[2].LabelId", Model.Labels.ToList()[2].LabelId) 
                        @Html.Hidden("Labels[2].Range", Model.Labels.ToList()[2].Range)
                        <input class="text-box single-line" type="text" value="@Model.Labels.ToList()[2].Text" name="[@Model.SortOrder].Labels[2].Text"/>
                    </div>
                </td>
            </tr>

