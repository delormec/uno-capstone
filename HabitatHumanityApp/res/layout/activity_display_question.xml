<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    
    <!-- Question navigation views -->
    <RelativeLayout
   		android:id="@+id/question_navigation"	    	
   		android:layout_width="match_parent"
   		android:layout_height="50sp"
   		android:layout_above="@layout/navbar"
   		android:layout_marginBottom="30sp">

   		<Button
	       	android:id="@+id/next"
    	   	android:layout_width="100sp"
	       	android:layout_height="wrap_content"
       		android:layout_alignParentRight="true"
       		android:layout_alignParentBottom="true"
       		android:text="Next Q" 
       		android:onClick="nextQuestion"/>

	   	<Button
	       	android:id="@+id/prev"
	       	android:layout_width="100sp"
	       	android:layout_height="wrap_content"
	       	android:layout_alignParentLeft="true"
	       	android:layout_alignParentBottom="true"       
	       	android:text="Prev Q"
	   		android:onClick="prevQuestion"/>

	   	<ProgressBar
	   	    android:id="@+id/formProgressBar"
	   	    style="?android:attr/progressBarStyleHorizontal"
	   	    android:layout_width="wrap_content"
	   	    android:layout_height="wrap_content"
	   	    android:layout_alignParentBottom="true"
	   	    android:layout_alignTop="@+id/next"
	   	    android:layout_toLeftOf="@+id/next"
	   	    android:layout_toRightOf="@+id/prev"/>

	   	<TextView
	   	    android:id="@+id/formTitle"
	   	    android:layout_width="wrap_content"
	   	    android:layout_height="wrap_content"
	   	    android:layout_alignParentBottom="true"
	   	    android:layout_centerHorizontal="true"
	   	    android:text=""/>
	
	</RelativeLayout>
    <!-- End question navigation views -->
    
    
    
    <!-- Navbar inclusion -->
    <!-- Including the Navbar like this was the only way I could get it to stay below the scrollview on the screen.
    	 Because of this, this area needs to be changed whenever changes to the navbar are made. -->
    <LinearLayout
    	android:id="@layout/navbar"
    	android:layout_width="match_parent"
    	android:layout_alignParentBottom="true"
        android:layout_height="60sp">
    
		<Button android:id="@+id/navbar_home_button" 
		    android:layout_width="0dp" 
		    android:layout_height="match_parent" 
		    android:layout_weight=".33" 
		    android:text="Home" 
		    android:textSize="25sp"
		    android:background="#999999" 
		    android:onClick="navigateHome"/>
	
		<Button android:id="@+id/navbar_edit_button" 
		    android:layout_width="0dp" 
			android:layout_height="match_parent" 
			android:layout_weight=".33" 
			android:text="Edit" 
			android:textSize="25sp"
			android:background="#999999"  
			android:onClick="navigateEdit"/>
	
		<Button android:id="@+id/navbar_submit_button" 
	    	android:layout_width="0dp" 
	    	android:layout_height="match_parent" 
	    	android:layout_weight=".33" 
	    	android:text="Submit" 
	    	android:textSize="25sp"
	    	android:background="#999999"
	    	android:onClick="navigateSubmit"/>
	
	</LinearLayout>
	<!-- End navbar inclusion -->
    
    
    


	<!-- Question Header -->
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:id="@+id/questionHeader"
	    android:focusableInTouchMode="true"
	    android:layout_marginLeft="20sp"
	    android:layout_marginTop="20sp"
	    android:layout_marginRight="20sp"
	    
	    >
		
		<TextView
		    android:id="@+id/questionNumber"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:text=""
		    android:textSize="25sp" />
			
		<!-- Horizontal rule -->
		<View
		    android:layout_width="match_parent"
		    android:layout_height="2sp"
		    android:layout_marginBottom="15sp"
		    android:background="#000000"/>
			    
	   	<TextView
	       	android:id="@+id/questionText"
	       	android:layout_width="match_parent"
	       	android:layout_height="wrap_content"
	       	android:text=""
	        android:textSize="25sp" />
	   	
	   	<TextView
	       	android:id="@+id/questionHelpText"
	       	android:layout_width="wrap_content"
	       	android:layout_height="wrap_content"
	       	android:textSize="19sp"
	       	android:text=""
	       	android:textColor="#888888"/>
	
	   	<TextView
	       	android:id="@+id/spacing_small"
	       	android:layout_width="wrap_content"
	       	android:layout_height="wrap_content"
	       	android:text=""
	        android:textAppearance="?android:attr/textAppearanceSmall" />
   	</LinearLayout>   
	<!-- End Question Header -->



    <!--  Main body of question -->
    <ScrollView 
	    android:fillViewport="true"
	    android:fadeScrollbars="false"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:paddingTop="20sp"
	    android:paddingLeft="20sp"
	    android:paddingRight="20sp"
	    android:layout_above="@id/question_navigation"
	    android:layout_below="@id/questionHeader"
	    android:id="@+id/question_layout">
    
	<LinearLayout 
	    android:id="@+id/question_subLayout_1"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" 
	    android:focusableInTouchMode="true">		

    	<EditText
        	android:id="@+id/answerText"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:ems="10"/>
    	
    	<TextView
    	    android:id="@+id/dateText"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:text=""
    	    android:textSize="35sp"
    	    android:textColor="#0099CC"
    	    android:onClick="showDatePicker"
    	 />

    	<TextView
        	android:id="@+id/likertLow"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
	        android:text="LikertLow" />

    	<LinearLayout
    		android:id="@+id/multipleSelectChoices"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:orientation="vertical"/>

    	<RadioGroup
        	android:id="@+id/questionChoices"
        	android:layout_width="wrap_content"
	        android:layout_height="wrap_content"/>
    	
    	
    	<EditText
    		    android:id="@+id/otherText"
    		    android:layout_width="match_parent"
    		    android:layout_height="wrap_content"
    		    android:inputType="text"
    		    android:hint="Please specify"/>
  	
    	<TextView
        	android:id="@+id/likertHigh"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
	        android:text="LikertHigh" />

		</LinearLayout>
	</ScrollView>
	<!-- End main body of question -->

</RelativeLayout>