<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenu" >

    <Spinner
        android:id="@+id/typeMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/selectedForm"
        android:layout_alignParentTop="true" />

    <Spinner
        android:id="@+id/templateMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/typeMenu"
        android:layout_below="@+id/typeMenu"
        android:layout_marginTop="24dp" />

    <Spinner
        android:id="@+id/formMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/templateMenu"
        android:layout_below="@+id/templateMenu"
        android:layout_marginTop="22dp" />

    <Button
        android:id="@+id/getFormsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/selectedForm"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:onClick="startFormDownload"
        android:text="@string/strDownloadForms" />

    <Button
        android:id="@+id/startPopulateBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/getFormsBtn"
        android:layout_below="@+id/getFormsBtn"
        android:onClick="startPopulateSpinners"
        android:text="@string/strPopulateSpinners" />

    <TextView
        android:id="@+id/selectedForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/formMenu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:text="@string/strSelectedForm" />

    <TextView
        android:id="@+id/groupLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/typeMenu"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="20dp"
        android:text="@string/strTemplateGroupLabel" />

    <TextView
        android:id="@+id/templateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/templateMenu"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="20dp"
        android:text="@string/strTemplateLabel" />

    <TextView
        android:id="@+id/formLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/formMenu"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="21dp"
        android:text="@string/strFormsLabel" />

</RelativeLayout>