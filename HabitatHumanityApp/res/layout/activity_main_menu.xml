<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3"
    android:orientation="horizontal"
    tools:context=".MainMenu" >

    <Spinner
        android:id="@+id/typeMenu"
        android:layout_gravity="fill_horizontal" />

    <Spinner
        android:id="@+id/templateMenu"
        android:layout_gravity="fill_horizontal"
        android:layout_marginTop="24dp"
        android:layout_row="1" />

    <Spinner
        android:id="@+id/formMenu"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal"
        android:layout_marginTop="22dp" />

    <TextView
        android:id="@+id/groupLabel"
        android:layout_column="0"
        android:layout_gravity="left"
        android:layout_marginBottom="20dp"
        android:layout_row="0"
        android:text="@string/strTemplateGroupLabel" />

    <TextView
        android:id="@+id/templateLabel"
        android:layout_column="0"
        android:layout_gravity="left"
        android:layout_marginBottom="20dp"
        android:text="@string/strTemplateLabel" />

    <TextView
        android:id="@+id/formLabel"
        android:layout_column="0"
        android:layout_gravity="left"
        android:layout_marginBottom="21dp"
        android:text="@string/strFormsLabel" />

    <include
        android:id="@+id/include1"
        android:layout_height="60sp"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        layout="@layout/navbar" />

    <RelaSpace
        android:layout_column="2"
        android:layout_gravity="fill_vertical"
        android:layout_row="4" />

</GridLayout>