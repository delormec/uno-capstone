<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenu" >

    <Spinner
        android:id="@+id/typeMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/selectedForm"
        android:layout_alignParentTop="true" />

    <Spinner
        android:id="@+id/templateMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/typeMenu"
        android:layout_below="@+id/typeMenu"
        android:layout_marginTop="24dp" />

    <Spinner
        android:id="@+id/formMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/templateMenu"
        android:layout_below="@+id/templateMenu"
        android:layout_marginTop="22dp" />

    <TextView
        android:id="@+id/groupLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/typeMenu"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="20dp"
        android:text="@string/strTemplateGroupLabel" />

    <TextView
        android:id="@+id/templateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/templateMenu"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="20dp"
        android:text="@string/strTemplateLabel" />

    <TextView
        android:id="@+id/formLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/formMenu"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="21dp"
        android:text="@string/strFormsLabel" />

    <include
        android:id="@+id/include1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        layout="@layout/navbar" />

    <TextView
        android:id="@+id/selectedForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/include1"
        android:layout_marginBottom="66dp"
        android:layout_toRightOf="@+id/groupLabel"
        android:text="@string/strSelectedForm" />

</RelativeLayout>