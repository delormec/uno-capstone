<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.habitatomaha.HOST"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/habitat_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="org.habitatomaha.HOST.Activity.SelectFormActivity" 
            android:label="Home">
            <intent-filter android:label="@string/app_name">          		
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="org.habitatomaha.HOST.Activity.EditFormActivity"
            android:label="Display Question" >
        </activity>
        
        <activity
            android:name="org.habitatomaha.HOST.Activity.SubmitFormActivity"
            android:label="Submit Form" >
        </activity>
        
        <activity
            android:name="org.habitatomaha.HOST.Activity.SettingsActivity"
            android:label="@string/title_activity_settings" 
            android:parentActivityName="org.habitatomaha.HOST.Activity.SelectFormActivity">
        </activity>
        
        <activity
            android:name="org.habitatomaha.HOST.Activity.ErrorLogActivity"
            android:label="Error Log"
            android:parentActivityName="org.habitatomaha.HOST.Activity.SelectFormActivity">            
        </activity>
        
        
        <activity
            android:name="org.habitatomaha.HOST.Activity.ScreenOneRework"
            android:label="Screen One Rework" >
        </activity>
    </application>

</manifest>