<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.habitathumanityapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.habitathumanityapp.MainScreenActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.habitathumanityapp.DisplayFormActivity"
            android:label="@string/title_activity_display_form"
            android:parentActivityName="com.example.habitathumanityapp.MainScreenActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.habitathumanityapp.MainScreenActivity" />
        </activity>
        <activity
            android:name="com.example.habitathumanityapp.NavigationActivity"
            android:label="NavigationActivity"
            android:parentActivityName="com.example.habitathumanityapp.MainScreenActivity" >
        </activity>
        <activity
            android:name="com.example.habitathumanityapp.DataStoreTestActivity"
            android:label="@string/title_activity_data_store_test"
            android:parentActivityName="com.example.habitathumanityapp.MainScreenActivity" >
        </activity>
        <activity
            android:name="com.example.habitathumanityapp.ParseFormTestActivity"
            android:label="@string/title_activity_parse_form"
            android:parentActivityName="com.example.habitathumanityapp.MainScreenActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.habitathumanityapp.MainScreenActivity" />
        </activity>
           <activity
            android:name="com.example.habitathumanityapp.MainMenuActivity"
            android:label="@string/title_activity_main_menu" >
        </activity>
           <activity android:name="com.example.habitathumanityapp.DisplayQuestionActivity" android:label="@string/title_activity_display_question"></activity>


    </application>

</manifest>